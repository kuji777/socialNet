<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="socialg.com.vyz.socialgaming.NewsDisplayActivity"
    android:orientation="vertical"
    android:background="@color/color_green_background">

  <TextView
      android:id="@+id/news_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="NEWS_TITLE"
      android:textColor="@color/color_mauve"
      android:textSize="25dp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:layout_gravity="center_horizontal"
      />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="4">
        <TextView
            android:id="@+id/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColorDarkTheme"
            />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/text_comments_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comments()"
            android:gravity="left"
            android:textColor="@color/color_blue"
            android:paddingLeft="15dp"/>
        <TextView
            android:id="@+id/text_likes_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Likes()"
            android:gravity="right"
            android:paddingRight="15dp"
            android:textColor="@color/color_blue"/>
    </LinearLayout>

</LinearLayout>
