<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="socialg.com.vyz.socialgaming.NewsDisplayActivity"
    android:orientation="vertical"
    android:background="@color/color_green_background">

  <TextView
      android:id="@+id/news_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="NEWS_TITLE"
      android:textColor="@color/color_mauve"
      android:textSize="25dp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:layout_gravity="center_horizontal"
      />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColorDarkTheme"
            />
    </ScrollView>

</LinearLayout>
